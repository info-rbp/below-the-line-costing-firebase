{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "node src/server.js",
    "start": "node src/server.js",
    "build": "echo 'Build complete'",
    "deploy": "firebase deploy --only functions,hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "serve": "firebase serve",
    "emulators:start": "firebase emulators:start",
    "logs": "firebase functions:log",
    "setup:init": "node scripts/init-admin-user.cjs",
    "setup:seed": "node scripts/seed-database.cjs",
    "setup:all": "npm run setup:init && npm run setup:seed",
    "setup:test": "node scripts/test-setup.cjs",
    "hash-password": "node scripts/hash_password.js",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "firebase-tools": "^13.0.0"
  }
}