rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Projects - authenticated users can read, managers+ can write
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                       request.auth.token.role in ['admin', 'manager'];
      allow update, delete: if request.auth != null && 
                                request.auth.token.role in ['admin', 'manager'];
    }
    
    // Personnel - authenticated users can read, managers+ can write
    match /personnel/{personnelId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      request.auth.token.role in ['admin', 'manager'];
    }
    
    // Rate bands - authenticated users can read, managers+ can write
    match /rateBands/{bandId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      request.auth.token.role in ['admin', 'manager'];
    }
    
    // Clients - authenticated users can read, managers+ can write
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      request.auth.token.role in ['admin', 'manager'];
    }
    
    // Materials master - authenticated users can read, managers+ can write
    match /materialsMaster/{materialId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      request.auth.token.role in ['admin', 'manager'];
    }
    
    // All other collections - authenticated users only
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
